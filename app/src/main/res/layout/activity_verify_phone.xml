<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyPhoneActivity">

    <!--<include-->
        <!--android:id="@+id/verifyAppbar"-->
        <!--layout="@layout/main_app_bar"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imglogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-106dp"
        android:text="Welcome to Expense Tracker"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imglogo"
        android:layout_centerHorizontal="true"
        android:text="Enter OTP That You've Received"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/wait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="253dp"
        android:gravity="center"
        android:text="Waiting for Code"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp" />


    <EditText
        android:id="@+id/et_OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wait"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter OTP"
        android:drawableLeft="@drawable/ic_action_otp"
        android:drawablePadding="5dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_below="@+id/et_OTP"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:theme="@style/loginButtonStyle" />

</RelativeLayout>