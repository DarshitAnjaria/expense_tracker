<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="6dp">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:cardCornerRadius="2dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <android.support.v7.widget.CardView
              android:layout_width="220dp"
              android:layout_height="50dp"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:layout_gravity="center"
              app:cardCornerRadius="5dp"
              app:cardBackgroundColor="@color/colorAccent"
              android:background="@drawable/edittextstyle">

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Edit Your Transfer"
                  android:textSize="20sp"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:layout_gravity="center_vertical"/>

          </android.support.v7.widget.CardView>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Type : "
                  android:textSize="15sp"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"/>

              <com.jaredrummler.materialspinner.MaterialSpinner
                  android:id="@+id/spinnerUpdateTransfer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginRight="20dp"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:text="Amount : "
                  android:layout_marginLeft="10dp"/>
              <EditText
                  android:id="@+id/editViewAmountTransfer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Transfer Amount"
                  android:inputType="number"
                  android:layout_marginLeft="8dp"
                  android:textSize="15sp"
                  android:backgroundTint="@color/colorAccent"
                  android:layout_marginRight="20dp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Date : "
                  android:textSize="15sp"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="10dp"/>

              <TextView
                  android:id="@+id/editViewDateOfTransfer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="Date Of Transfer"
                  android:inputType="date"
                  android:layout_marginLeft="31dp"
                  android:textSize="15sp"
                  android:layout_marginTop="5dp"
                  android:backgroundTint="@color/colorAccent"
                  android:layout_marginRight="20dp"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="From : "
                  android:textSize="15sp"
                  android:layout_marginLeft="10dp"/>

              <EditText
                  android:id="@+id/editViewFromAcc"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="From Account"
                  android:inputType="text"
                  android:textSize="15sp"
                  android:layout_marginLeft="27dp"
                  android:backgroundTint="@color/colorAccent"
                  android:layout_marginRight="20dp"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="To : "
                  android:textSize="15sp"
                  android:layout_marginLeft="10dp"/>

              <EditText
                  android:id="@+id/editViewToAcc"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="To Account"
                  android:inputType="text"
                  android:textSize="15sp"
                  android:layout_marginLeft="44dp"
                  android:backgroundTint="@color/colorAccent"
                  android:layout_marginRight="20dp"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Remarks : "
                  android:textSize="15sp"
                  android:layout_marginLeft="10dp"/>
              <EditText
                  android:id="@+id/editViewRemarkTransfer"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:layout_marginLeft="3dp"
                  android:inputType="text"
                  android:hint="No Remarks"
                  android:backgroundTint="@color/colorAccent"
                  android:layout_marginRight="20dp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="60dp"
              android:orientation="horizontal"
              android:layout_gravity="center">
              <Button
                  android:id="@+id/btnSaveChangesTrans"
                  android:layout_width="120dp"
                  android:layout_height="40dp"
                  android:text="Save Changes"
                  android:elevation="15dp"
                  android:textSize="12sp"
                  android:background="@drawable/buttonaddstyle"
                  android:textColor="@android:color/white"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"/>

              <Button
                  android:id="@+id/btnDeleteTrans"
                  android:layout_width="120dp"
                  android:layout_height="40dp"
                  android:text="Delete"
                  android:textSize="12sp"
                  android:elevation="15dp"
                  android:background="@drawable/buttondelstyle"
                  android:textColor="@android:color/white"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"/>
          </LinearLayout>

      </LinearLayout>

  </android.support.v7.widget.CardView>

</ScrollView>