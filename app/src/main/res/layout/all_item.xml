<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTypeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Types"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDatesAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEntryDatesTrans"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:text="Dates"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvEntryDatesTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvTypeAll"
                android:layout_alignTop="@+id/tvTypeAll"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="52dp"
                android:text="Entry Date"
                android:textSize="15sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvAmountsAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Amounts"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tvRemarksAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEntryDatesTrans"
                android:layout_alignStart="@+id/tvTypeAll"
                android:layout_marginStart="1dp"
                android:layout_marginTop="90dp"
                android:text="Remarks"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvFromAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRemarksAll"
                android:layout_alignStart="@+id/tvRemarksAll"
                android:text="From Account"
                android:textSize="15dp" />

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/tvRemarksAll"-->
                <!--android:layout_marginStart="5dp"-->
                <!--android:layout_marginTop="0dp"-->
                <!--android:layout_toEndOf="@+id/tvFromAccount"-->
                <!--android:text="To"-->
                <!--android:textSize="15sp" />-->

            <TextView
                android:id="@+id/tvToAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRemarksAll"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/tvFromAccount"
                android:text="To Account"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvTransaction"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="157dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="106dp"
                android:text="Transaction" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>